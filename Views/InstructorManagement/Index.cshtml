@model List<courseManagementSystemV1.Models.Course>
@{
    ViewData["Title"] = "My Courses";
}
<h2>My Courses</h2>

@if (Model == null || !Model.Any())
{
    <p>You haven't created any courses yet.</p>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(course.CoursePhoto))
                    {
                        <img src="@course.CoursePhoto" class="card-img-top" alt="@course.CourseName">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@course.CourseName</h5>
                        <p class="card-text">@course.CourseDescription.Substring(0, Math.Min(100, course.CourseDescription.Length))...</p>
                        <a href="@Url.Action("CourseDetails", new { id = course.CourseID })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<a href="@Url.Action("AddCourse")" class="btn btn-success">Add New Course</a>