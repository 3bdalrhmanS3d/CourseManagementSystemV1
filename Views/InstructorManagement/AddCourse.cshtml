@model courseManagementSystemV1.Models.Course

<h2>Add New Course</h2>

<form asp-action="AddCourse" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="CourseName">Course Name</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseDescription">Course Description</label>
        <textarea asp-for="CourseDescription" class="form-control"></textarea>
        <span asp-validation-for="CourseDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="img_file">Course Image</label>
        <input type="file" id="img_file" name="img_file" class="form-control-file" />
    </div>

    <div class="form-group">
        <label asp-for="CourseStartDate">Start Date</label>
        <input asp-for="CourseStartDate" type="date" class="form-control" />
        <span asp-validation-for="CourseStartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseEndDate">End Date</label>
        <input asp-for="CourseEndDate" type="date" class="form-control" />
        <span asp-validation-for="CourseEndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseTime">Course Time</label>
        <input asp-for="CourseTime" class="form-control" />
        <span asp-validation-for="CourseTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseState">Course State</label>
        <input asp-for="CourseState" class="form-control" />
        <span asp-validation-for="CourseState" class="text-danger"></span>
    </div>

    <div id="requirements">
        <h4>Course Requirements</h4>
        <div class="requirement-item">
            <input type="text" name="Requirements[0].RequirementDescription" class="form-control" placeholder="Requirement" />
        </div>
    </div>
    <button type="button" id="addRequirement" class="btn btn-secondary mt-2">Add Requirement</button>

    <div class="form-group mt-3">
        <input type="submit" value="Create Course" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script>
        let requirementCount = 1;
        $('#addRequirement').click(function () {
            $('#requirements').append(`
                        <div class="requirement-item mt-2">
                            <input type="text" name="Requirements[${requirementCount}].RequirementDescription" class="form-control" placeholder="Requirement" />
                        </div>
                    `);
            requirementCount++;
        });
    </script>
}