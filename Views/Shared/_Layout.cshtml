<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - courseManagementSystemV1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .nav-item 
        {
            margin-right: 20px; /* Adjust spacing between items as needed */
        }

            .nav-item .nav-link.active, .nav-item .btn.active {
                background-color: transparent; /* No background color for active item */
                color: red; /* Text color for active item */
                text-decoration: underline; /* Underline active item */
                text-decoration-color: red; /* Underline color for active item */
                text-underline-offset: 10px; /* Adjust underline position */
                text-decoration-thickness: 10px; /* Adjust underline thickness */
            }

            .nav-item .nav-link, .nav-item .btn {
                
                font-size: 22px; /* Unified font size for all items */
                color: black; /* Default color for non-active items */
                background-color: transparent; /* Remove background color */
                border: none; /* Remove border */
                padding: 10px; /* Padding to adjust spacing */
                transition: all 0.3s ease; /* Smooth transition */
            }

                .nav-item .nav-link:hover, .nav-item .btn:hover {
                    text-decoration: underline; /* Underline on hover */
                    text-decoration-color: red; /* Underline color on hover */
                    text-underline-offset: 10px; /* Adjust underline position */
                    text-decoration-thickness: 10px; /* Adjust underline thickness */
                }

            /* Add responsiveness */
            .nav-item .nav-link, .nav-item .btn {
                white-space: nowrap; /* Prevent text wrapping */
            }

        .navbar-nav {
            flex-wrap: wrap; /* Allow items to wrap to the next line */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (ViewContext.HttpContext.Session.GetString("Login") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Privacy" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        else
                        {
                            
                            if (ViewContext.HttpContext.Session.GetString("UserStatus") == "HR")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "MyCourses") ? "active" : "")" asp-area="" asp-controller="MyCourses" asp-action="Index">My Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "ManageCourses" && ViewContext.RouteData.Values["controller"].ToString() == "HR") ? "active" : "")" asp-area="" asp-controller="HR" asp-action="ManageCourses">Manage Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "HR") ? "active" : "")" asp-area="" asp-controller="HR" asp-action="Index">HR Panel</a>
                                </li>
                            }
                            else if (ViewContext.HttpContext.Session.GetString("UserStatus") == "Mentor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "UserHome") ? "active" : "")" asp-area="" asp-controller="UserHome" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "CourseManagement") ? "active" : "")" asp-area="" asp-controller="CourseManagement" asp-action="Index">Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "MyCourses") ? "active" : "")" asp-area="" asp-controller="MyCourses" asp-action="Index">My Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "BeInstructor" && ViewContext.RouteData.Values["controller"].ToString() == "Management") ? "active" : "")" asp-area="" asp-controller="Management" asp-action="BeInstructor">Be Instructor</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "CourseManagement") ? "active" : "")" asp-area="" asp-controller="" asp-action="">Mentoring</a>
                                </li>
                            }
                            else if (ViewContext.HttpContext.Session.GetString("UserStatus") == "Instructor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "UserHome") ? "active" : "")" asp-area="" asp-controller="UserHome" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "MyCourses") ? "active" : "")" asp-area="" asp-controller="MyCourses" asp-action="Index">My Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "CourseManagement") ? "active" : "")" asp-area="" asp-controller="CourseManagement" asp-action="Index">Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "InstructorManagement") ? "active" : "")" asp-area="" asp-controller="InstructorManagement" asp-action="Index">Instructor Management</a>
                                </li>
                            }
                            else if (ViewContext.HttpContext.Session.GetString("UserStatus") == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "UserHome") ? "active" : "")" asp-area="" asp-controller="UserHome" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "MyCourses") ? "active" : "")" asp-area="" asp-controller="MyCourses" asp-action="Index">My Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "AdminPanel") ? "active" : "")" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "InstructorManagement") ? "active" : "")" asp-area="" asp-controller="InstructorManagement" asp-action="Index">Instructor Management</a>
                                </li>

                                
                            }
                            else if (ViewContext.HttpContext.Session.GetString("UserStatus") == "user")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "UserHome") ? "active" : "")" asp-area="" asp-controller="UserHome" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "MyCourses") ? "active" : "")" asp-area="" asp-controller="MyCourses" asp-action="Index">My Courses</a>
                                </li>

                            }
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "AboutUs" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Privacy" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }

                    </ul>
                    <ul class="nav nav-pills nav-fill">
                        @if (ViewContext.HttpContext.Session.GetString("Login") == null)
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="Registration" asp-action="Index">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                            </li>
                            <li class="">
                                <a class="btn btn-danger " asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
