<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - courseManagementSystemV1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <style>
        .btn-primary
        {
            background-color: #28a745;
            border-color: #28a745;
        }
    </style> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (ViewContext.HttpContext.Session.GetString("Login") == null)
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        else
                        {
                            
                            if (ViewContext.HttpContext.Session.GetString("UserStatus") == "user")
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="UserHome" asp-action="Index">Home</a>
                                </li>
                                <li>
                                    <a class="navbar-brand" asp-area="" asp-controller="UserCourses" asp-action="Index">My Courses</a>
                                </li>
                            }
                            else if (ViewContext.HttpContext.Session.GetString("UserStatus") == "HR")
                            {
                                <li>
                                    <a class="navbar-brand" asp-area="" asp-controller="HR" asp-action="ManageCourses">Manage Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success" asp-area="" asp-controller="HR" asp-action="Index">HR Panel</a>
                                </li>
                            }
                            else if (ViewContext.HttpContext.Session.GetString("UserStatus") == "admin")
                            {
                                <li class="nav-item">
                                    <a class="btn btn-success" asp-area="" asp-controller="UserCourses" asp-action="Index">My Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Report">Students</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="AddArea">Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success" asp-area="" asp-controller="Instructor" asp-action="Index">Instructor</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                    </ul>
                    <ul class="nav nav-pills nav-fill" >
                        @if (ViewContext.HttpContext.Session.GetString("Login") == null)
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="Registration" asp-action="Index">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="UserAccount" asp-action="Index">@ViewContext.HttpContext.Session.GetString("FullName")</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
