@model IEnumerable<courseManagementSystemV1.Models.Course>

<!DOCTYPE html>
<html>
<head>
    <title>Course Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            flex-direction: column;
        }

        .course-list {
            width: 80%;
            margin-top: 20px;
        }

            .course-list table {
                width: 100%;
                border-collapse: collapse;
            }

            .course-list th, .course-list td {
                border: 1px solid #ccc;
                padding: 8px;
                text-align: left;
            }

            .course-list th {
                background-color: #17a2b8;
                color: white;
            }

        .action-button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

            .action-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="course-list">
        <h1>Course Management</h1>
        <table>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseID</td>
                    <td>@course.CourseName</td>
                    <td>@course.IsAvailable</td>
                    <td>
                        @if (course.IsAvailable == false)
                        {
                            <button class="action-button" onclick="location.href='@Url.Action("AcceptanceOfCourses", "Admin", new { id = course.CourseID })'">Accept Course</button>
                        }
                        @if (course.IsAvailable == true )
                        {
                            <button class="action-button" onclick="location.href='@Url.Action("FinishTheCourse", "Admin", new { id = course.CourseID })'">Finish Course</button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
