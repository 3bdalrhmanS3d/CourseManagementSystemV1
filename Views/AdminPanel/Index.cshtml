@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>
    <style>
        body
        {
            /* font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            height: 50vh;
            margin: 0;
            flex-direction: column; */
        } 

        .admin-list {
            width: 100%;
            margin-top: 20px;
        }

            .admin-list table {
                width: 100%;
                border-collapse: collapse;
            }

        .h1 {
            text-align: center;
        }

        .admin-list th, .admin-list td {
            border: 2px solid #ccc;
            padding: 10px;
            text-align: center;
            font : bold ;
        }

        .admin-list th {
            background-color: #17a2b8;
            color: white;
        }

        .action-button:hover {
            background-color: #0056b3;
        }

        /* //////// */
        .header {
            margin-bottom: 20px;
            font-size : 1em ;

        }

        .statistics-container {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .statistic-card {
            background-color: #17a2b8;
            color: white;
            border-radius: 8px;
            width: 250px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .statistic-header {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .statistic-value {
            font-size: 2em;
            font-weight: bold;
        }

        .statistic-footer {
            margin-top: 10px;
            font-size: 0.9em;
        }

        .statistic-change {
            font-weight: bold;
        }

            .statistic-change.positive {
                color: #28a745;
            }

            .statistic-change.negative {
                color: #dc3545;
            }

        .actions-container {
            display: flex;
            gap: 20px;
        }

        .action-button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

            .action-button:hover 
            {
                background-color: #0056b3;
            }

    </style>
</head>
<body>

    <div class="navbar">

        <label><a href="/AdminPanel/MentorsAndInstructors" class="btn btn-outline-primary" role="button" aria-pressed="true"> Mentors And Instructors </a></label>
        <label><a href="/AdminPanel/Visiting" class="btn btn-outline-primary" role="button" aria-pressed="true"> Visiting History </a></label>
        <label><a href="/AdminPanel/Statistics" class="btn btn-outline-primary" role="button" aria-pressed="true"> Statistics </a></label>
        <label><a href="/UsersManagement/Index" class="btn btn-outline-primary" role="button" aria-pressed="true"> Users </a></label>
        <label><a href="/CourseManagement/Index" class="btn btn-outline-primary" role="button" aria-pressed="true"> Courses </a></label>

        @* <button class="action-button" onclick="location.href='@Url.Action("MakeAdmin", "AdminPanel")'">Make Admin</button> *@
        @* <button class="action-button" onclick="location.href='@Url.Action("DeleteAdmin", "AdminPanel")'">Delete Admin</button>
        <button class="action-button" onclick="location.href='@Url.Action("UserAccepted", "AdminPanel")'">Accept User</button>
        <button class="action-button" onclick="location.href='@Url.Action("UserDeleted", "AdminPanel")'">Delete User</button>
        <button class="action-button" onclick="location.href='@Url.Action("UserBolcked", "AdminPanel")'">Block User</button> *@
    </div>
    <br />
    <br />

    <div class="statistics-container">
        <div class="statistic-card">
            <div class="statistic-header">Accepted Users</div>
            <div class="statistic-value">@Model.AcceptedUsersCount</div>
        </div>

        <div class="statistic-card">
            <div class="statistic-header">Not Accepted Users</div>
            <div class="statistic-value">@Model.NotAcceptedUsersCount</div>
        </div>

        <div class="statistic-card">
            <div class="statistic-header">HR Users</div>
            <div class="statistic-value">@Model.HRCount</div>
        </div>

        <div class="statistic-card">
            <div class="statistic-header">Instructors</div>
            <div class="statistic-value">@Model.InstructorsCount</div>
        </div>

        <div class="statistic-card">
            <div class="statistic-header">Accepted Courses</div>
            <div class="statistic-value">@Model.AcceptedCoursesCount</div>
        </div>
    </div>

    <div class="admin-list">
        <h1>All users</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Accepted By</th>
                <th>Accepted Date</th>

                <th>User Email</th>
                <th>Last visit</th>
                <th>Actions</th>
                <th>View</th>
            </tr>
            @foreach (var user in ViewBag.allUsers)
            {
                <tr>
                    <td>@user.UserSSN</td>
                    <td>@user.UserFirstName @user.UserMiddelName @user.UserLastName </td>
                    <td>@user.whoAcceptedUser</td>
                    <td>@user.userAcceptedDate</td>
                    <td>@user.UserEmail</td>
                    <td>
                        @user.UserlastVisit 
                    </td>
                    <td>
                        <form asp-action="MakeAdmin" method="post">
                            <input type="hidden" name="id" value="@user.UserID" />
                            <button class="btn btn-outline-success" type="submit"> MakeAdmin </button>
                        </form>
                    </td>
                    <td>
                        <button class="btn btn-outline-info" onclick="location.href='@Url.Action("ViewData", "AdminPanel", new { id = user.UserID })'">View</button>
                    </td>
                </tr>
            }
        </table>
    </div>

    <br />
    <br />
    <div class="admin-list">
        <h1>Admins</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Accepted By</th>
                <th>Accepted Date</th>
                <th>User Email</th>
                <th>Last visit</th>
                <th>Actions</th>
                <th>View</th>
            </tr>
            @foreach (var user in ViewBag.admins)
            {
                <tr>
                    <td>@user.UserSSN</td>
                    <td>@user.UserFirstName @user.UserMiddelName @user.UserLastName </td>
                    <td>@user.whoAcceptedUser</td>
                    <td>@user.userAcceptedDate</td>
                    <td>@user.UserEmail</td>
                    <td>
                        @user.UserlastVisit
                    </td>
                    <td>
                        <form asp-action="DeleteAdmin" method="post">
                            <input type="hidden" name="id" value="@user.UserID" />
                            <button class="btn btn-outline-danger" type="submit"> Delete </button>
                        </form>
                    </td>
                    <td>
                        <button class="btn btn-outline-info" onclick="location.href='@Url.Action("ViewData", "AdminPanel", new { id = user.UserID })'">View</button>
                    </td>
                    
                </tr>
            }
        </table>
    </div>


</body>
</html>

