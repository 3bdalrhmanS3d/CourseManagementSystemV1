@model dynamic

<!DOCTYPE html>
<html>
<head>
    <title>Statistics</title>
    <style>
        /* body
        {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            
            align-items: center;
            /* height: 50vh; */

            margin: 0;
            flex-direction: column;
        } */

        .header {
            margin-bottom: 20px;
        }

        .statistics-container {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .statistic-card {
            background-color: #17a2b8;
            color: white;
            border-radius: 8px;
            width: 250px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .statistic-header {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .statistic-value {
            font-size: 2em;
            font-weight: bold;
        }

        .statistic-footer {
            margin-top: 10px;
            font-size: 0.9em;
        }

        .statistic-change {
            font-weight: bold;
        }

            .statistic-change.positive {
                color: #28a745;
            }

            .statistic-change.negative {
                color: #dc3545;
            }

        .actions-container {
            display: flex;
            gap: 20px;
        }

        .action-button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

        .btn.active {
            background-color: #007bff;
            color: white;
        }


            .action-button:hover {
                background-color: #0056b3;
            }


        /* CSS لتحسين تصميم الشريط التنقلي */
        .navbar {
            display: flex;
            justify-content: space-around;
            background-color: #f8f9fa;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

            .navbar label {
                margin: 0;
            }

            .navbar a {
                color: #007bff;
                border: 2px solid #007bff;
                border-radius: 5px;
                padding: 10px 20px;
                text-decoration: none;
                transition: background-color 0.3s, color 0.3s;
            }

                .navbar a:hover,
                .navbar a:focus,
                .navbar a.active {
                    background-color: #007bff;
                    color: #fff;
                    text-decoration: none;
                }

                .navbar a:active {
                    background-color: #0056b3;
                    color: #fff;
                }
    </style>
</head>
<body>
    @{
        var currentUrl = Context.Request.Path;
    }

    <div class="navbar">
        <label>
            <a href="/AdminPanel/MentorsAndInstructors" class="btn btn-outline-primary @(currentUrl == "/AdminPanel/MentorsAndInstructors" ? "active" : "")" role="button" aria-pressed="true"> Mentors And Instructors </a>
        </label>
        <label>
            <a href="/AdminPanel/Visiting" class="btn btn-outline-primary @(currentUrl == "/AdminPanel/Visiting" ? "active" : "")" role="button" aria-pressed="true"> Visiting History </a>
        </label>
        <label>
            <a href="/AdminPanel/Statistics" class="btn btn-outline-primary @(currentUrl == "/AdminPanel/Statistics" ? "active" : "")" role="button" aria-pressed="true"> Statistics </a>
        </label>
        <label>
            <a href="/UsersManagement/Index" class="btn btn-outline-primary @(currentUrl == "/UsersManagement/Index" ? "active" : "")" role="button" aria-pressed="true"> Users </a>
        </label>
        <label>
            <a href="/CourseManagement/Index" class="btn btn-outline-primary @(currentUrl == "/CourseManagement/Index" ? "active" : "")" role="button" aria-pressed="true"> Courses </a>
        </label>
    </div>
    <br />
    <div class="header">
        <h1>Admin Panel</h1>
    </div>

    <div class="statistics-container">
        <div class="statistic-card">
            <div class="statistic-header">Accepted Users</div>
            <div class="statistic-value">@Model.AcceptedUsersCount</div>
            <div class="statistic-footer">
                <span class="statistic-change positive">+11%</span>
                <span> From previous period</span>
            </div>
        </div>
        <div class="statistic-card">
            <div class="statistic-header">Not Accepted Users</div>
            <div class="statistic-value">@Model.NotAcceptedUsersCount</div>
            <div class="statistic-footer">
                <span class="statistic-change negative">-29%</span>
                <span> From previous period</span>
            </div>
        </div>
        <div class="statistic-card">
            <div class="statistic-header">HR Count</div>
            <div class="statistic-value">@Model.HRCount</div>
            <div class="statistic-footer">
                <span class="statistic-change">0%</span>
                <span> From previous period</span>
            </div>
        </div>
        <div class="statistic-card">
            <div class="statistic-header">Accepted Courses</div>
            <div class="statistic-value">@Model.AcceptedCoursesCount</div>
            <div class="statistic-footer">
                <span class="statistic-change positive">+89%</span>
                <span> From previous period</span>
            </div>
        </div>
    </div>

    @* <div class="actions-container">
        <button class="action-button" onclick="location.href='@Url.Action("AdminManagement", "Admin")'">Manage Admins</button>
        <button class="action-button" onclick="location.href='@Url.Action("UserManagement", "Admin")'">Manage Users</button>
        <button class="action-button" onclick="location.href='@Url.Action("CourseManagement", "Admin")'">Manage Courses</button>
        <button class="action-button" onclick="location.href='@Url.Action("HRManagement", "Admin")'">View HRs</button>
    </div> *@
</body>
</html>

