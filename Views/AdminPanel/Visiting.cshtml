@{
    ViewData["Title"] = "Visiting History";
    var visits = ViewBag.Visits as List<courseManagementSystemV1.Models.VisitHistory>;
    var section = ViewBag.Section as string;
}

<style>
    label {
        font-weight: bold;
    }

    input:focus {
        border-color: blue;
        box-shadow: 0 0 5px rgba(0, 0, 255, 0.5);
    }

    .table thead th {
        font-weight: bold;
        color: red;
        text-align: center ;
    }

    .table tbody td 
    {
        
        color: black;
    }
</style>
<h2>Visiting History</h2>
<br />
<form method="get" asp-controller="AdminPanel" asp-action="Visiting">
    <div class="form-group row">
        <div class="col">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>
        <div class="col">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" />
        </div>
        <div class="col">
            <label for="userEmail">User Email</label>
            <input type="email" id="userEmail" name="userEmail" class="form-control" />
        </div>
        <div class="col">
            <label for="userName">User Name</label>
            <input type="text" id="userName" name="userName" class="form-control" />
        </div>
        <div class="col">
            <label for="userPhoneNumber">Phone Number</label>
            <input type="text" id="userPhoneNumber" name="userPhoneNumber" class="form-control" />
        </div>
        <div class="col">
            <label for="userSSN">SSN</label>
            <input type="text" id="userSSN" name="userSSN" class="form-control" />
        </div>
    </div>
    <br />

    <div class="btnFilter">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a href="@Url.Action("Visiting", "AdminPanel")" class="btn btn-secondary">Clear Filter</a>

    </div>
</form>
<br />

<div style="overflow-x:auto;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User Name</th>
                <th> SSN </th>
                <th>Email</th>
                <th>Visit Date</th>
                
                <th>User Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visit in visits)
            {
                <tr>
                    <td>@visit.User.UserFirstName @visit.User.UserMiddelName @visit.User.UserLastName</td>
                    <td>@visit.User.UserSSN </td>
                    <td>@visit.User.UserEmail</td>
                    <td>@visit.VisitHistoryDate</td>
                    <td>
                        @{
                            var userType = "";
                            if (visit.User.IsAdmin.HasValue && visit.User.IsAdmin.Value)
                            {
                                userType = "Admin";
                            }
                            else if (visit.User.IsUserHR.HasValue && visit.User.IsUserHR.Value)
                            {
                                userType = "HR";
                            }
                            else if (visit.User.IsInstructor.HasValue && visit.User.IsInstructor.Value)
                            {
                                userType = "Instructor";
                            }
                            else if (visit.User.IsMentor.HasValue && visit.User.IsMentor.Value)
                            {
                                userType = "Mentor";
                            }
                            else
                            {
                                userType = "Normal User";
                            }
                            @userType
                        }
                    </td>
                    <td><a asp-action="ViewData" asp-route-id="@visit.UserID" class="btn btn-info">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
