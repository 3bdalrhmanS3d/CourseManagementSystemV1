@{
    ViewData["Title"] = "Visiting History";
    var visits = ViewBag.Visits as List<courseManagementSystemV1.Models.VisitHistory>;
    var section = ViewBag.Section as string;
}

<style>
    label {
        font-weight: bold;
    }

    input:focus {
        border-color: blue;
        box-shadow: 0 0 5px rgba(0, 0, 255, 0.5);
    }

    .table thead th {
        font-weight: bold;
        color: red;
        text-align: center ;
    }

    .table tbody td 
    {
        
        color: black;
    }

    .btn.active {
        background-color: #007bff;
        color: white;
    }
    /* CSS لتحسين تصميم الشريط التنقلي */
    .navbar {
        display: flex;
        justify-content: space-around;
        background-color: #f8f9fa;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

        .navbar label {
            margin: 0;
        }

        .navbar a {
            color: #007bff;
            border: 2px solid #007bff;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
        }

            .navbar a:hover,
            .navbar a:focus,
            .navbar a.active {
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
            }

            .navbar a:active {
                background-color: #0056b3;
                color: #fff;
            }
</style>
@{
    var currentUrl = Context.Request.Path;
}

<div class="navbar">
    <label>
        <a href="/AdminPanel/MentorsAndInstructors" class="btn btn-outline-primary @(currentUrl == "/AdminPanel/MentorsAndInstructors" ? "active" : "")" role="button" aria-pressed="true"> Mentors And Instructors </a>
    </label>
    <label>
        <a href="/AdminPanel/Visiting" class="btn btn-outline-primary @(currentUrl == "/AdminPanel/Visiting" ? "active" : "")" role="button" aria-pressed="true"> Visiting History </a>
    </label>
    <label>
        <a href="/AdminPanel/Statistics" class="btn btn-outline-primary @(currentUrl == "/AdminPanel/Statistics" ? "active" : "")" role="button" aria-pressed="true"> Statistics </a>
    </label>
    <label>
        <a href="/UsersManagement/Index" class="btn btn-outline-primary @(currentUrl == "/UsersManagement/Index" ? "active" : "")" role="button" aria-pressed="true"> Users </a>
    </label>
    <label>
        <a href="/CourseManagement/Index" class="btn btn-outline-primary @(currentUrl == "/CourseManagement/Index" ? "active" : "")" role="button" aria-pressed="true"> Courses </a>
    </label>
</div>
<br />
<h2>Visiting History</h2>
<br />
<form method="get" asp-controller="AdminPanel" asp-action="Visiting">
    <div class="form-group row">
        <div class="col">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>
        <div class="col">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" />
        </div>
        <div class="col">
            <label for="userEmail">User Email</label>
            <input type="email" id="userEmail" name="userEmail" class="form-control" />
        </div>
        <div class="col">
            <label for="userName">User Name</label>
            <input type="text" id="userName" name="userName" class="form-control" />
        </div>
        <div class="col">
            <label for="userPhoneNumber">Phone Number</label>
            <input type="text" id="userPhoneNumber" name="userPhoneNumber" class="form-control" />
        </div>
        <div class="col">
            <label for="userSSN">SSN</label>
            <input type="text" id="userSSN" name="userSSN" class="form-control" />
        </div>
    </div>
    <br />

    <div class="btnFilter">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a href="@Url.Action("Visiting", "AdminPanel")" class="btn btn-secondary">Clear Filter</a>

    </div>
</form>
<br />

<div style="overflow-x:auto;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User Name</th>
                <th> SSN </th>
                <th>Email</th>
                <th>Visit Date</th>
                
                <th>User Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visit in visits)
            {
                <tr>
                    <td>@visit.User.UserFirstName @visit.User.UserMiddelName @visit.User.UserLastName</td>
                    <td>@visit.User.UserSSN </td>
                    <td>@visit.User.UserEmail</td>
                    <td>@visit.VisitHistoryDate</td>
                    <td>
                        @visit.CurrentVisitorStatus 
                    </td>
                    <td><a asp-action="ViewData" asp-route-id="@visit.UserID" class="btn btn-info">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
