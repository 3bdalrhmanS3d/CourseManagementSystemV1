        .admin-list {
            width: 100%;
            margin-top: 20px;
        }

            .admin-list table {
                width: 100%;
                border-collapse: collapse;
            }
            .h1 {
            text-align: center;
            }
            .admin-list th, .admin-list td {
                border: 2px solid #ccc;
                padding: 5px;
                text-align: center;
            }

            .admin-list th
            {
                background-color: #17a2b8;
                color: white;
            }

        /* .action-button {
            /* background-color: #007bff; */
            /* color: white; */
            padding: 10px 20px;
            border: 3;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        } */

            .action-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="admin-list">
        <h1>All users</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Accepted By</th>
                <th>Accepted Date</th>

                <th>User Email</th>

                <th>Actions</th>
                <th>View</th>
            </tr>
            @foreach (var user in ViewBag.allUsers)
            {
                <tr>
                    <td>@user.UserSSN</td>
                    <td>@user.UserFirstName @user.UserMiddelName @user.UserLastName </td>
                    <td>@user.whoAcceptedUser</td>
                    <td>@user.userAcceptedDate</td>
                    <td>@user.UserEmail</td>
                    <td>
                        <button class="btn btn-outline-success" onclick="location.href='@Url.Action("MakeAdmin", "Admin", new { id = user.UserID })'">Make Admin</button>
                    </td>
                    <td>
                        <button class="btn btn-outline-info" onclick="location.href='@Url.Action("ViewData", "Admin", new { id = user.UserID })'">View</button>
                    </td>
                </tr>
            }
        </table>
    </div>

    <br /><br />
    <div class="admin-list">
        <h1 >Admins</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Accepted By</th>
                <th>Accepted Date</th>
                <th>User Email</th>
                <th>Actions</th>
                <th>View</th>
            </tr>
            @foreach (var user in ViewBag.admins)
            {
                <tr>
                    <td>@user.UserSSN</td>
                    <td>@user.UserFirstName @user.UserMiddelName @user.UserLastName </td>
                    <td>@user.whoAcceptedUser</td>
                    <td>@user.userAcceptedDate</td>
                    <td>@user.UserEmail</td>
                    <td>
                        <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("DeleteAdmin", "Admin", new { id = user.UserID })'">Delete Admin</button>
                    </td>
                    <td>
                        <button class="btn btn-outline-info" onclick="location.href='@Url.Action("ViewData", "Admin", new { id = user.UserID })'">View</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
