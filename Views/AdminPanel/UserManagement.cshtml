@model IEnumerable<courseManagementSystemV1.Models.User>

<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            flex-direction: column;
        }

        .user-list {
            width: 80%;
            margin-top: 20px;
        }

            .user-list table {
                width: 100%;
                border-collapse: collapse;
            }

            .user-list th, .user-list td {
                border: 1px solid #ccc;
                padding: 8px;
                text-align: left;
            }

            .user-list th {
                background-color: #17a2b8;
                color: white;
            }

        .action-button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

            .action-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="user-list">
        <h1>User Management</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Accepted</th>
                <th>Actions</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.UserFirstName</td>
                    <td>@user.UserLastName</td>
                    <td>@user.IsAccepted</td>
                    <td>
                        @if (user.IsAccepted == false )
                        {
                            <button class="action-button" onclick="location.href='@Url.Action("UserAccepted", "Admin", new { id = user.UserID })'">Accept User</button>
                        }
                        <button class="action-button" onclick="location.href='@Url.Action("UserDeleted", "Admin", new { id = user.UserID })'">Delete User</button>
                        <button class="action-button" onclick="location.href='@Url.Action("UserBolcked", "Admin", new { id = user.UserID })'">Block User</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
