<body>
    <div class="user-list">
        <h1>Pending</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Date</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            @foreach (var user in ViewBag.AllUsersNotAcceptedYet)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.UserFirstName @user.UserMiddelName @user.UserLastName</td>
                    <td>@user.UserCreatedAccount</td>
                    <td>@user.UserEmail</td>
                    <td>
                        <button class="btn btn-outline-success" onclick="location.href='@Url.Action("UserAccepted", "Admin", new { id = user.UserID })'">Accept User</button>
                    </td>
                </tr>
            }
            
        </table>
    </div>
    <br />
    <hr />
    <br />
    <div class="user-list">
        <h1>Accepted</h1>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Accepted Date</th>
                <th>Accepted By</th>
                <th>Email</th>
                <th>Actions</th>
                <th>View</th>
            </tr>
            @foreach (var user in ViewBag.AllUsersNotAccepted)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.UserFirstName @user.UserMiddelName @user.UserLastName</td>
                    <td>@user.userAcceptedDate</td>
                    <td>@user.whoAcceptedUser</td>
                    <td>@user.UserEmail</td>
                    <td>
                        <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("UserBolcked", "Admin", new { id = user.UserID })'">Block</button>
                        <button class="btn btn-outline-danger" onclick="location.href='@Url.Action("UserDeleted", "Admin", new { id = user.UserID })'">Delete User</button>
                    </td>
                    <td>
                        <button class="btn btn-outline-info" onclick="location.href='@Url.Action("ViewData", "UserView", new { id = user.UserID })'">View</button>
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
