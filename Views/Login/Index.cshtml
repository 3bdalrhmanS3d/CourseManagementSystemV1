@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Course Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
         .body
         {
             height: 100%; 
            margin-right: 20px;
             display: flex; 
             justify-content: center;
            align-items: center; 
            background-color: #f5f5f5;
             font-family: Arial, sans-serif; 
            font-size : 20px;

        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
            border-radius: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 1000px;
            width: 100%;
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: url('/wwwroot/images/login_photo.jpg') no-repeat center center;
            background-size: cover;
        }

        .form-group
        {
            font-weight: bold;
        }

        .login-form {
            flex: 1;
            padding: 40px;
        }

            .login-form h2 {
                margin-bottom: 55px;
                font-weight: bold;
            }

        .form-control.is-invalid {
            border-color: #dc3545;
            color: #dc3545;
        }

            .form-control.is-invalid:focus {
                box-shadow: none;
            }

        .text-danger {
            color: #dc3545 !important;
        }

        .password-toggle {
            cursor: pointer;
            user-select: none;
        }

         .btn-primary {
            /* background-color: #28a745;
            border-color: #28a745;*/
            width: 100%; 
            font-size : 25px ;
        }

        .login-footer {
            margin-top: 20px;
            text-align: center;
        }

            .login-footer a {
                text-decoration: none;
                color: #007bff;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-image"></div>
        <div class="login-form">
            <h2 class="text-center"> Login</h2>
            <fieldset>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.Label("Email")
                        @Html.TextBox("email", null, new { @class = "form-control" })
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.Label("Password")
                        <div class="input-group">
                            @Html.Password("password", null, new { @class = "form-control", id = "passwordInput" })
                            <div class="input-group-append">
                                <span class="input-group-text password-toggle" onclick="togglePassword()">Show</span>
                            </div>
                        </div>
                        <br />
                        <div class="invalid-feedback">
                            Wrong email or password
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="LOGIN" class="btn btn-primary btn-lg" onclick="validateForm(event)" />
                    </div>
                }

                <div class="login-footer">
                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account", null, new { @class = "no-underline" })
                    <br />
                    <br>
                    @Html.ActionLink("Create your Account", "Index", "Registration", null, new { @class = "no-underline" })
                </div>

                <p class="text-center text-danger">@ViewBag.Message</p>
            </fieldset>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts
{
    <script type="text/javascript">
        function togglePassword() {
            var passwordInput = document.getElementById("passwordInput");
            var passwordToggle = passwordInput.nextElementSibling.querySelector(".password-toggle");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordToggle.innerText = "Hide";
            } else {
                passwordInput.type = "password";
                passwordToggle.innerText = "Show";
            }
        }

        function validateForm(event) {
            var emailInput = document.querySelector('input[name="email"]');
            var passwordInput = document.querySelector('input[name="password"]');

            // Clear any previous invalid states
            emailInput.classList.remove('is-invalid');
            passwordInput.classList.remove('is-invalid');
            document.querySelector('.invalid-feedback').style.display = 'none';

            // Dummy validation: assume invalid if password is empty
            if (!passwordInput.value) {
                event.preventDefault(); // Prevent form submission
                passwordInput.classList.add('is-invalid');
                passwordInput.value = ''; // Clear the input
                document.querySelector('.invalid-feedback').style.display = 'block';
            }
        }
    </script>
}
